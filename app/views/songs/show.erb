<h3><%=@song.name%></h3>

<h4>Artist:
    <span>
        <% if @song.artist == nil %>
            <%="No artist entered yet"%>
        <% else %>
            <a href="/artists/<%=@song.artist.slug%>"><%=@song.artist.name%></a>
        <% end%>
    </span>
</h4>

<h4>Genres:</h4>
    <% @song.genres.each do |genre| %>
        <a href="/genres/<%=genre.slug%>"><%= genre.name %></a>
    <% end %>
